/* 新闻列表 */
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 16rpx;
}
.post-author-date {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.post-author {
  height: 60rpx;
  width: 60rpx;
}
.post-date {
  margin-left: 20rpx;
  font-size: 13px;
}
.post-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.post-img {
  width: 100%;
  margin-bottom: 16rpx;
}
.post-content {
  font-size: 14px;
  color: #666;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}
.post-collect {
  display: flex;
  align-items: center;
}
.post-collect image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.post-collect image:nth-of-type(2) {
  margin-left: 40rpx;
}