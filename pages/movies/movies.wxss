/* pages/movies/movies.wxss */
@import "movie-list-template/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.search{
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
  display: flex;
  align-items: center;
  padding: 0 16rpx;
}
.search input{
  width: 600rpx;
  height: 100%;
  margin-left: 20rpx;
}
.search-page::after{
  content: "";
  display: block;
  clear: both;
  height: 0;
  visibility: hidden;
}