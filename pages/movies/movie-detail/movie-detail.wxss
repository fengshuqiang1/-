@import '../stars/stars-template.wxss';
page{
  overflow-x: hidden;
}
.movie-detail{
  display: flex;
  flex-direction: column;
}
.movie-detail-headerImg{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.movie-detail-header {
  height: 320rpx;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.movie-detail-headerTitle{
  font-size: 18px;
  font-weight: bold;
  color: #fff;
  letter-spacing: 4px;
  margin-bottom: 40rpx;
}
.movie-detail-countryYear{
  font-size: 16px;
  color: #fff;
  margin-bottom: 80rpx;
}
.movie-detail-linkComment{
  font-size: 12px;
}
.movie-detail-like{
  color: red;
  margin-right: 10rpx;
}
.movie-detail-comment{
  color: red;
  margin: 0 10rpx 0 24rpx;
}
.movie-detail-text{
  color: #666;
}
/* 海报 */
.movie-detail-postImg{
  width: 200rpx;
  height: 270rpx;
  position: absolute;
  top: 220rpx;
  right: 40rpx;
}
/* 电影评分导演演员等信息 */
.movie-detail-movie{
  padding: 40rpx;
  font-size: 12px;
  color: #666;
  background-color: #fff;
  border-bottom: 1px solid #f2f2f2;
}
.movie-detail-movieTitle{
  width: 460rpx;
  display: inline-block;
  font-size: 14px;
  font-weight: bold;
}
.movie-detail-average{
  display: flex;
  align-items: center;
  margin: 20rpx 0 10rpx 0;
}
.movie-detail-title {
  margin-right: 20rpx;
}
.movie-detail-director,
.movie-detail-casts,
.movie-detail-movieType{
  margin-bottom: 10rpx;
}
.movie-detail-casts{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 剧情简介 */
.movie-detail-summary{
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  font-size: 12px;
  border-bottom: 1px solid #f2f2f2;
}
.movie-detail-summaryTitle{
  color: #666;
  margin-bottom: 20rpx;
}
.movie-detail-summaryDetail{
  letter-spacing: 2px;
  line-height: 1.5;
  text-indent: 2em;
}
/* 演员图片与名字 */
.movie-detail-castsInfo{
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}
.movie-detail-castsTitle{
  font-size: 12px;
  color: #666;
}
.movie-detail-castItems{
  white-space: nowrap;
  margin-top: 40rpx;
}
.movie-detail-castItem{
  width: 200rpx;
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  text-align: center;
}
.movie-detail-castImg{
  height: 270rpx;
  width: 200rpx;
}
.movie-detail-castName{
  margin-top: 16rpx;
  font-size: 12px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}